<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:background="@color/clrSplashBg"
        android:layout_height="match_parent"
        tools:context=".activity.SelectOption">


    <TextView
            android:textStyle="bold"
            android:textColor="@color/clrBlack"
            android:textSize="22sp"
            android:text="FireBase ML Kit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/btnTranslateText"/>



       <Button
            android:layout_margin="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/btnTranslateText"
            android:textAlignment="center"
            android:textSize="18sp"
            android:padding="10dp"
            android:text="Traslate Text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

       <Button
            android:layout_margin="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnTranslateText"
            android:id="@+id/btnFacedetection"
            android:textAlignment="center"
            android:textSize="18sp"
            android:padding="10dp"
            android:text="Face Detection"
            android:layout_width="match_parent"
            android:layout_height="0dp"/>


      <Button
            android:layout_margin="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnFacedetection"
            android:id="@+id/btnLandMarkdetection"
            android:textAlignment="center"
            android:textSize="18sp"
            android:padding="10dp"
            android:text="LandMark Detection"
            android:layout_width="match_parent"
            android:layout_height="0dp"/>

    <Button
            android:layout_margin="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnLandMarkdetection"
            android:id="@+id/btngoogleAr"
            android:textAlignment="center"
            android:textSize="18sp"
            android:padding="10dp"
            android:text="Google AR Detection"
            android:layout_width="match_parent"
            android:layout_height="0dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>